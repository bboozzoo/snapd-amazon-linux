From 7b9f44aa08899be6c1cb6684a6cebe40ea4faf6e Mon Sep 17 00:00:00 2001
From: Zygmunt Krynicki <me@zygoon.pl>
Date: Tue, 1 Nov 2016 23:32:57 +0200
Subject: [PATCH] Fix LibExecDir on Fedora

---
 cmd/snap/cmd_run.go | 2 +-
 dirs/dirs.go        | 2 +-
 2 files changed, 2 insertions(+), 2 deletions(-)

diff --git a/cmd/snap/cmd_run.go b/cmd/snap/cmd_run.go
index 717bada..81f6e14 100644
--- a/cmd/snap/cmd_run.go
+++ b/cmd/snap/cmd_run.go
@@ -183,7 +183,7 @@ func runSnapConfine(info *snap.Info, securityTag, snapApp, command, hook string,
 		"/usr/bin/ubuntu-core-launcher",
 		securityTag,
 		securityTag,
-		"/usr/lib/snapd/snap-exec",
+		"/usr/libexec/snapd/snap-exec",
 	}
 
 	if command != "" {
diff --git a/dirs/dirs.go b/dirs/dirs.go
index 36e3b54..5ceb5f6 100644
--- a/dirs/dirs.go
+++ b/dirs/dirs.go
@@ -144,5 +144,5 @@ func SetRootDir(rootdir string) {
 	LocaleDir = filepath.Join(rootdir, "/usr/share/locale")
 	ClassicDir = filepath.Join(rootdir, "/writable/classic")
 
-	LibExecDir = filepath.Join(rootdir, "/usr/lib/snapd")
+	LibExecDir = filepath.Join(rootdir, "/usr/libexec")
 }
