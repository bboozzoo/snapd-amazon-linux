+	c.Assert(err, IsNil)
+	s.oldSessionBusEnv = os.Getenv("DBUS_SESSION_BUS_ADDRESS")
+
+	s.SessionBus, err = dbus.SessionBus()
+	c.Assert(err, IsNil)
+}
