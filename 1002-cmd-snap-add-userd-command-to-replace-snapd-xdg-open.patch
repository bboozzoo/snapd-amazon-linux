+	os.Setenv("DBUS_SESSION_BUS_ADDRESS", s.oldSessionBusEnv)
+	if s.dbusDaemon != nil && s.dbusDaemon.Process != nil {
+		err := s.dbusDaemon.Process.Kill()
+		c.Assert(err, IsNil)
+	}
